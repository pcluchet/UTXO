#!/usr/bin/env bash

C_RED="\033[31;01m"
C_GREEN="\033[32;01m"
C_YELLOW="\033[33;01m"
C_BLUE="\033[34;01m"
C_PINK="\033[35;01m"
C_CYAN="\033[36;01m"
C_NO="\033[0m"

################################################################################
### MAIN #######################################################################
################################################################################

if [[ ${#} -gt 0 ]]; then
	printf "${C_RED}balance does not require any argument.\n"
	printf "${C_YELLOW}usage: ${C_NO}%s\n" "balance"
	exit 1
fi
./peer balance
